##test FPPPP,  :args => '-r27 -b3 -pm', :comment => 'lowest reg < 32'
##test RKF45,  :args => '-r24 -b3 -pm', :comment => 'lowest reg < 32'
##test WAVE5X, :args => '-r25 -b3 -pm', :comment => 'lowest reg < 32'

